{
  "version": 1,
  "mode": "assistive",
  "constraints": {
    "require_confirmation_for": [
      "package_install",
      "system_update",
      "power_reboot",
      "power_shutdown",
      "power_sleep",
      "calendar_add_event",
      "email_draft",
      "delete_files",
      "network_exfiltration"
    ],
    "deny_actions": [
      "rm -rf /",
      "disable_security_services"
    ],
    "package_install_deny": [
      "rm -rf",
      "dd if=/dev/zero"
    ],
    "package_install_confirm": [
      "openssl",
      "docker",
      "kernel"
    ],
    "open_url_allowed_domains": [
      "openai.com",
      "google.com",
      "mail.google.com"
    ],
    "open_app_allowed": [
      "firefox",
      "settings",
      "org.kde.systemsettings"
    ],
    "list_files_allowed_prefixes": [
      "/home",
      "/tmp"
    ],
    "rate_limit_per_minute_default": 120,
    "rate_limit_per_minute_overrides": {
      "package_install": 10,
      "system_update": 6,
      "power_reboot": 6,
      "power_shutdown": 6,
      "power_sleep": 6,
      "open_url": 90,
      "open_app": 90,
      "list_files": 120,
      "weather_get": 120,
      "calendar_list_day": 120,
      "calendar_add_event": 60,
      "email_inbox_summary": 90,
      "email_search": 90,
      "email_draft": 45,
      "plan_day_outfit": 60,
      "ping": 240,
      "get_capabilities": 240,
      "confirm": 120
    }
  }
}
